<script>
    const proposalDate = new Date(2024, 9, 31, 11, 56, 0); 

    function updateTimer() {
        const now = new Date();
        const diff = now - proposalDate;
        const totalDays = Math.floor(diff / (1000 * 60 * 60 * 24));
        document.getElementById('milestone-text').innerText = `${totalDays} days of memories...`;
        document.getElementById('y').innerText = Math.floor(diff / (1000 * 60 * 60 * 24 * 365.25));
        document.getElementById('mo').innerText = Math.floor((diff % (1000 * 60 * 60 * 24 * 365.25)) / (1000 * 60 * 60 * 24 * 30.44));
        document.getElementById('d').innerText = Math.floor((diff % (1000 * 60 * 60 * 24 * 30.44)) / (1000 * 60 * 60 * 24));
        document.getElementById('h').innerText = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        document.getElementById('m').innerText = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
        document.getElementById('s').innerText = Math.floor((diff % (1000 * 60)) / 1000);
    }
    setInterval(updateTimer, 1000);
    updateTimer();

    function toggleLetter(el) {
        el.classList.toggle('opened');
        // Dim the cake slightly when letter is open to focus on text
        document.getElementById('cake-area').style.opacity = el.classList.contains('opened') ? "0.3" : "1";
    }

    function createMagicTouch(x, y) {
        const h = document.createElement('div');
        h.className = 'magic-heart';
        h.innerText = 'üíñ';
        h.style.left = x + 'px'; h.style.top = y + 'px';
        document.body.appendChild(h);
        setTimeout(() => h.remove(), 1000);
    }
    document.addEventListener('mousemove', (e) => createMagicTouch(e.clientX, e.clientY));
    document.addEventListener('touchmove', (e) => createMagicTouch(e.touches[0].clientX, e.touches[0].clientY));

    function makeWish() {
        document.getElementById('candle').classList.add('blown');
        triggerConfetti();
    }

    function heartStorm() {
        for (let i = 0; i < 30; i++) {
            setTimeout(() => {
                const h = document.createElement('div');
                h.className = 'spam-heart';
                h.innerText = 'üíñ';
                h.style.left = Math.random() * 100 + 'vw';
                h.style.animationDuration = (Math.random() * 2 + 2) + 's';
                document.body.appendChild(h);
                setTimeout(() => h.remove(), 4500);
            }, i * 100);
        }
    }

    function triggerConfetti() {
        confetti({ particleCount: 100, spread: 70, origin: { y: 0.8 }, colors: ['#ff4d6d', '#ff7eb3', '#fff'] });
    }

    // Stars Background
    const canvas = document.getElementById('bg-canvas');
    const ctx = canvas.getContext('2d');
    let dots = [];
    function init() {
        canvas.width = window.innerWidth; canvas.height = window.innerHeight;
        dots = [];
        for(let i=0; i<30; i++) dots.push({ x: Math.random()*canvas.width, y: Math.random()*canvas.height, r: Math.random()*1.2, dx: Math.random()-0.5, dy: Math.random()-0.5 });
    }
    function draw() {
        ctx.clearRect(0,0,canvas.width, canvas.height);
        ctx.fillStyle = "rgba(255,255,255,0.2)";
        dots.forEach(d => {
            ctx.beginPath(); ctx.arc(d.x, d.y, d.r, 0, Math.PI*2); ctx.fill();
            d.x += d.dx; d.y += d.dy;
            if(d.x<0 || d.x>canvas.width) d.dx*=-1;
            if(d.y<0 || d.y>canvas.height) d.dy*=-1;
        });
        requestAnimationFrame(draw);
    }
    window.onresize = init; init(); draw();
</script>
